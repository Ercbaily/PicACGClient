<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="wrap_content" android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:background="#00000000">

        <LinearLayout android:layout_width="120dp" android:layout_height="wrap_content"
                      android:orientation="vertical" android:background="@android:color/white">

            <TextView android:id="@+id/edit" android:layout_width="match_parent" android:layout_height="match_parent"
                      android:text="编辑" android:gravity="center" android:padding="8dp" android:textColor="#666666"/>

            <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="#DDDDDD"/>

            <TextView android:id="@+id/delete" android:layout_width="match_parent" android:layout_height="match_parent"
                      android:text="删除" android:gravity="center" android:padding="8dp" android:textColor="#666666"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>