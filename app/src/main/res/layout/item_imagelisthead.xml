<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView android:layout_marginTop="24dp" android:layout_marginLeft="12dp" android:layout_marginRight="8dp"
              android:textSize="26sp" android:textColor="@android:color/background_dark" tools:text="标题"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/title"/>

    <TextView android:layout_marginLeft="16dp" android:layout_marginTop="4dp" android:layout_marginRight="16dp"
              android:layout_marginBottom="8dp" tools:text="简介" android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/introduction"/>

</LinearLayout>